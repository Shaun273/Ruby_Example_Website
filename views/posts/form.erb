<form class="" action="/posts/<%= @post[:id] %>" method="post">
  <div class="">
    <label for="">Title</label>
    <input type="text" name="title" placeholder="The title of the post" value="<%= @post[:title] %>">
  </div>

  <div class="">
    <label for="">Body</label>
    <textarea name="body" rows="8" cols="80" placeholder="The body of the post"><%= @post[:body] %></textarea>
  </div>

  <div class="">
    <input type="submit" name="Save Post" value="Save Post">
  </div>

  <% if(@post[:id] != "") %>
  <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
